<h1>Songs</h1>

<div class="col-md-12">
  <table class="table table-striped table-hover">
  <tr>
    <th>
      Song Title
    </th>
    <td>
      Artist
    </td>
    <th>
      Actions
    </th>
  </tr>
  <% @songs.each do |song| %>
    <tr>
      <td>
        <%= song.title %>
      </td>
      <td>
        <%= song.artist.try(:name) %>
      </td>
      <td>
        <%= link_to "Show", song_path(song), class: "btn btn-xs btn-info" %>
        <%= link_to "Edit", edit_song_path(song), class: "btn btn-xs btn-success" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<%= link_to "Add Song", new_song_path, class: "btn btn-sm btn-primary" %>
