<h1>Artists</h1>

<div class="col-md-12">
  <table class="table table-striped table-hover">
  <tr>
    <th>
      Artist Name
    </th>
    <th>
      Record Label
    </th>
    <th>
      Songs
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% @artists.each do |artist| %>
    <tr>
      <td>
        <%= artist.name %>
      </td>
      <td>
        <% if artist.record_label %>
          <%= artist.record_label.name %>
        <% end %>
      </td>
      <td>
        <% artist.songs.each do |song| %>
          <%= song.title %><br>
        <% end %>
      </td>
      <td>
        <%= link_to "Show", artist_path(artist), class: "btn btn-xs btn-info" %>
        <%= link_to "Edit", edit_artist_path(artist), class: "btn btn-xs btn-success" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<%= link_to "Add Artist", new_artist_path %>
<br><%= link_to "See All Songs", songs_path %>
