<h1>Artists</h1>

<div class="col-md-12">
  <table class="table table-striped table-hover">
  <tr>
    <th>
      Artist Name
    </th>
    <td>
      Songs
    </td>
    <th>
      Actions
    </th>
  </tr>
  <% @artists.each do |song| %>
    <tr>
      <td>
        <%= song.title %>
      </td>
      <td>
        <%= song.artist %>
      </td>
      <td>
        <%= link_to "Show", song_path(song), class: "btn btn-xs btn-info" %>
        <%= link_to "Edit", edit_song_path(song), class: "btn btn-xs btn-success" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<%= link_to "Add Song", new_song_path %>
