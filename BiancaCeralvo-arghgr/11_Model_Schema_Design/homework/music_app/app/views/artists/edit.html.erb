<h1>Edit <%= @artist.name %></h1>
<%= simple_form_for @artist do |f| %>
  <%= f.input :name, label: false, placeholder: "Name" %>
  <%= f.association :record_label, label_method: :name, prompt: "Pick a record label" %>
  <%= f.button :submit %>
<% end %>

<br><%= link_to "Delete Artist", @artist, method: :delete, data: {confirm: "Are you sure you want to delete this artist?"}, class: "btn btn-sm btn-danger" %>
